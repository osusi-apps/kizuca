<!DOCTYPE html>
<html>

<head>
  <title>Kizuca</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <div class="header-logo">
      <% if @current_user %>
      <%= link_to("TweetApp", "/posts/index") %>
      <% else %>
      <%= link_to("TweetApp", "/") %>
      <% end %>
    </div>
    <ul class="header-menus">
      <% if @current_user %>
      <li>
        <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
      </li>
      <li>
        <%= link_to("ログアウト", "/logout", {method: :post}) %>
      </li>
      <% else %>
      <li>
        <%= link_to("TweetAppとは", "/about") %>
      </li>
      <li>
        <%= link_to("新規登録", "/signup") %>
      </li>
      <li>
        <%= link_to("ログイン", "/login") %>
      </li>
      <% end %>
    </ul>
  </header>

  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <% end %>

  <%= yield %>

  <footer>
    <ul class="header-menus">
      <% if @current_user %>

      <li>
        <%= link_to("DM", "/") %>
      </li>
      <li>
        <%= link_to("グループ", "/") %>
      </li>
     <li>
        <%= link_to("通知", "/") %>
      </li>
      <li>
        <%= link_to("新規投稿", "/posts/new") %>
      </li>
      <li>
        <%= link_to("ホーム", "/posts/index") %>
      </li>
      <% end %>
    </ul>
  </footer>

</body>

</html>